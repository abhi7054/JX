<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorBlack"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/thai_sans_neue_extra_bold"
            android:text="@string/reviews"
            android:textColor="@color/colorWhite"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/ll_star_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tv_star_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorYellow"
                android:src="@drawable/ic_star_border"/>

            <ImageView
                android:id="@+id/tv_star_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorYellow"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star_border"/>

            <ImageView
                android:id="@+id/tv_star_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorYellow"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star_border"/>

            <ImageView
                android:id="@+id/tv_star_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorYellow"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star_border"/>

            <ImageView
                android:id="@+id/tv_star_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorYellow"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star_border"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_submit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/laguange_button_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="@string/submit"
                android:includeFontPadding="false"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>